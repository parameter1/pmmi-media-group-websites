$ const { config, i18n, site } = out.global;

$ const type = "login";
$ const title = "Log in";
$ const description = `${i18n(`Log in to ${config.siteName()}`)}`;
$ const lang = site.config.lang || "en";

<marko-web-default-page-layout type=type title=title description=description>
  <@head>
    <marko-web-gtm-default-context|{ context }| type=type>
      <marko-web-gtm-push data=context />
    </marko-web-gtm-default-context>
  </@head>
  <@page>
    <marko-web-page-wrapper>
      <@section>
        <h1 class="page-wrapper__title">${description}</h1>
        <marko-web-identity-x-form-login
          login-email-label=i18n("Email address")
          button-labels={
            continue: i18n("Continue"),
            login: i18n("Log in"),
          }
          lang=lang
        />
      </@section>
    </marko-web-page-wrapper>
  </@page>
</marko-web-default-page-layout>
