import { getAsArray } from "@mindful-web/object-path";

$ const { id, alias, name, pageNode } = input;
$ const sections = getAsArray(input, "sections");

<global-website-section-default-layout
  id=id
  alias=alias
  name=name
  page-node=pageNode
  head=input.head
>
  <@section|{ aliases }| modifiers=["first"]>
    <theme-gam-define-display-ad
      name="leaderboard"
      position="home_page"
      aliases=aliases
      modifiers=["max-width-970", "center", "margin-auto-x", "inline"]
    />
    <theme-gam-wallpaper-ad aliases=aliases position="home_page" />
  </@section>

  <@section|{ aliases }|>
    <theme-top-stories-block
      with-header=false
      lazyload=false
      query-params={
        optionName: "Pinned",
        excludeContentTypes: ["Webinar"],
        excludeLabels: ["Supplier Submitted", "Webinar"]
      }
    />
  </@section>
  <for|s| of=sections>
    <@section|{ blockName, section, aliases }| modifiers=s.modifiers>
      <${s.renderBody}
        block-name=blockName
        section=section
        aliases=aliases
      />
    </@section>
  </for>

  <@section|{ aliases }|>
    <theme-gam-define-display-ad
      name="rotation"
      position="home_page"
      aliases=aliases
      modifiers=["inter-block"]
    />
  </@section>
</global-website-section-default-layout>
